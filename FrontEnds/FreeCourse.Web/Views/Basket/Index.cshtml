@model BasketViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sepet</h5>
                @if (Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Kurt isim</th>
                            <th>Kurs fiyat</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model.BasketItems)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Price</td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-courseId="@item.CourseId">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (Model.DiscountRate is not null)
                        {
                            <tr>
                                <td>İndirim oranı</td>
                                <th colspan="2">%@Model.DiscountRate.Value</th>
                            </tr>
                        }
                        <tr>
                            <td>@(Model.HasDiscount() ? "İndirimli tutar" : "Toplam tutar")</td>
                            <td colspan="2">@Model.TotalPrice TL</td>
                        </tr>
                    </table>


                }
                else
                {
                    <div class="alert alert-info">Sepet boş</div>
                }
            </div>
        </div>

    </div>
</div>


